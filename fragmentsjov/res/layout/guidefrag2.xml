<?xml version="1.0" encoding="utf-8"?>
<fragmenter.FrameLayoutPct xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guidefrag2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FF00FF"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/next_pil"
            android:layout_width="104dp"
            android:layout_height="155dp"
            android:rotation="0.0"
            android:src="@drawable/right_arrow" />

        <ImageView
            android:id="@+id/bloodDrop"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:rotation="0.0"
            android:src="@drawable/blood_drop_icon" />
    </LinearLayout>

</fragmenter.FrameLayoutPct>